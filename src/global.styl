@import './reset.styl'
@import './common.styl'

// Tweeq-specific styles
::selection
	background var(--tq-color-primary)
	color var(--tq-color-on-primary)

:root
	font-size 12px
	font-family 'Inter'
	font-synthesis none
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	-webkit-text-size-adjust 100%
	--titlebar-area-height env(titlebar-area-height, 38px)
	--app-margin-top calc(env(titlebar-area-y, 0px) + var(--titlebar-area-height))
	// UI Metrics
	--tq-pane-border-radius 1.4rem

*, *:before, *:after
	box-sizing border-box
	outline none
	font-weight inherit
	font-style normal
	font-size inherit
	cursor inherit

::-webkit-scrollbar
	width 10px
	height 10px
	background transparent

::-webkit-scrollbar-thumb
	border-radius 9999px
	background 'color-mix(in srgb, var(--tq-color-on-background) 20%, transparent)' % ''

button, input
	padding 0
	border 0
	background transparent
	color inherit
	text-align inherit
	font-size inherit
	font-family inherit
	user-select none

body
	overflow hidden
	margin 0
	height 100vh
	background var(--tq-color-background)
	color var(--tq-color-on-background)
	user-select none

em
	font-weight bold

hr
	margin 0.5em 0
	border 0
	border-top 1px solid currentColor
	opacity 0.2

	& + br
		display none

.tq-font-numeric
	font-numeric()

.iconify
	display inline
	width 24px
	height 24px

.transition
	hover-transition(all)

	&:before, &:after
		hover-transition(all)

.iconify
	margin 2px 0
	width calc(var(--tq-input-height) - 4px)
	height calc(var(--tq-input-height) - 4px)

.v-popper--theme-tooltip
	.v-popper__inner
		background var(--tq-color-inverse-surface) !important
		color var(--tq-color-inverse-on-surface) !important
		line-height 1.4
		backdrop-filter blur(4px)

	.v-popper__arrow-outer
		border-color var(--tq-color-inverse-surface) !important
