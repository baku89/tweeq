font-monospace()
	font-family 'Fira Code', monospace
	font-variant-ligatures contextual

font-heading()
	font-family monotype-grotesque, sans-serif

font-ui()
	font-family -apple-system, system-ui, 'system-ui', Helvetica, Arial, sans-serif, 'Apple Color Emoji'

font-numeric()
	font-ui()
	font-variant-numeric tabular-nums

input-transition(prop = all)
	values = ()

	for p in arguments
		push(values, p + ' 0.1s ease')

	transition unquote(join(',', values))

base16(name, opacity = 1)
	varName = '--base' + name

	if (name == 'accent')
		varName = '--base0A'

	if (opacity == 1)
		unquote('rgb(var(' + varName + '))')
	else
		unquote('rgba(var(' + varName + '), ' + opacity + ')')

input($focus-selector)
	height var(--input-width)
	border 1px solid base16('02', 0.5)
	border-radius var(--input-border-radius)
	background base16('01')
	color base16('05')
	line-height var(--input-width)
	cursor col-resize
	input-transition(box-shadow)

	input&, & input
		display block
		margin-top -1px
		padding 0 0.6em

	&:hover, &:focus, &:focus-within
		border-color base16('accent')
		color base16('06')

	&:focus, &:focus-within, &{$focus-selector}
		box-shadow 0 0 0 1px base16('accent')