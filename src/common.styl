font-monospace()
	font-family 'Fira Code', monospace
	font-variant-ligatures contextual

font-heading()
	font-family Inter, sans-serif

font-ui()
	font-family Inter, -apple-system, system-ui, 'system-ui', Helvetica, Arial, sans-serif, 'Apple Color Emoji'

font-numeric()
	font-ui()
	font-variant-numeric tabular-nums

input-transition(prop = all)
	values = ()

	for p in arguments
		push(values, p + ' 0.1s ease')

	transition unquote(join(',', values))

base16(name, opacity = 1)
	varName = '--base' + name

	if (name == 'accent')
		varName = '--base0D'

	if (opacity == 1)
		unquote('rgb(var(' + varName + '))')
	else
		unquote('rgba(var(' + varName + '), ' + opacity + ')')

input($focus-selector)
	height var(--input-height)
	border-radius var(--input-border-radius)
	background base16('01')
	color base16('05')
	cursor col-resize
	input-transition(box-shadow)
	font-size var(--input-font-size)

	input&, & input
		display block
		margin-top -1px
		padding 0.3em 0.6em
		line-height calc(var(--input-height) - 0.3em)

	&:hover, &:focus, &:focus-within
		box-shadow 0 0 0 1px inset base16('accent')
		color base16('06')

	&:focus, &:focus-within, &{$focus-selector}
		box-shadow 0 0 0 1px inset base16('accent'), 0 0 0 1px base16('accent')