font-monospace()
	font-family 'Fira Code', monospace
	font-variant-ligatures contextual

font-heading()
	font-family Inter, sans-serif

font-ui()
	font-family Inter, -apple-system, system-ui, 'system-ui', Helvetica, Arial, sans-serif, 'Apple Color Emoji'

font-numeric()
	font-ui()
	font-variant-numeric tabular-nums

input-transition(prop = all)
	values = ()

	for p in arguments
		push(values, p + ' 0.1s ease')

	transition unquote(join(',', values))

base16(name, opacity = 1)
	varName = '--base' + name

	if (name == 'accent')
		varName = '--base0D'

	if (opacity == 1)
		unquote('rgb(var(' + varName + '))')
	else
		unquote('rgba(var(' + varName + '), ' + opacity + ')')

input($focus-selector = ':focus')
	height var(--input-height)
	border-radius var(--input-border-radius)
	background base16('01')
	color base16('05')
	input-transition(box-shadow)
	font-size var(--input-font-size)

	& input
		display block
		padding 0.3em 0.6em
		line-height calc(var(--input-height) - 0.5em)

	&:has(:disabled)
		border 1px solid base16('02')
		background transparent
		color base16('03')

	&.invalid
		background base16('0B', 0.1)
		color base16('0B')

	&:not(:has(:disabled))
		cursor col-resize

		&:hover, &:focus, &:focus-within
			box-shadow 0 0 0 0 inset base16('accent'), 0 0 0 1px inset base16('accent')
			color base16('06')

		&:focus, &:focus-within, &{$focus-selector}
			z-index 1
			box-shadow 0 0 0 1px inset base16('accent'), 0 0 0 1px base16('accent')