{
	"compilerOptions": {
		"target": "esnext",
		"module": "umd",
		"strict": true,
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"baseUrl": ".",
		"outDir": "lib",
		"declaration": true,
		"emitDeclarationOnly": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"jsx": "preserve",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"types": ["vite/client"],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.d.tsx",
		"src/**/*.vue",
		"src/**/*.js"
	]
}
